    /**
     * 
     */

    public void loadSettings() {
        this.field_hostname.setText(Config.get("mailHost", "mail.example.de"));        
        this.field_port.setText(String.valueOf(Config.getConfigInt("mailPort", 25)));

        this.check_auth.setSelected(Config.getConfigBoolean("mailAuth", true));
        this.field_user.setText(Config.get("mailUsername", "info@example.de"));
        this.field_password.setText(Config.get("mailPassword", null));
        
        this.field_testemail.setText(Config.get("mailTestmail", "info@example.de"));
        
        this.check_ssl.setSelected(Config.getConfigBoolean("mailSSL", false));
        this.check_tls.setSelected(Config.getConfigBoolean("mailTLS", false));
        
        this.field_sender.setText(Config.get("mailSender", null));
        this.field_sendermail.setText(Config.get("mailSendermail", "info@example.de"));
        
    }

    /**
     * 
     */

    public void saveSettings() {
        Config.set("mailHost", this.field_hostname.getText().trim());        
        Config.setInt("mailPort", Integer.valueOf(this.field_port.getText().trim()));
        
        Config.set("mailPassword", String.valueOf(this.field_password.getPassword()));       
        Config.set("mailUsername", this.field_user.getText().trim());
        
        Config.setBoolean("mailAuth", this.check_auth.isSelected());
        
        Config.set("mailTestmail", this.field_testemail.getText());
        
        Config.setBoolean("mailSSL", check_ssl.isSelected());
        Config.setBoolean("mailTLS", check_tls.isSelected());
        
        Config.set("mailSender", this.field_sender.getText().trim());
        Config.set("mailSendermail", this.field_sendermail.getText().trim());
    }

