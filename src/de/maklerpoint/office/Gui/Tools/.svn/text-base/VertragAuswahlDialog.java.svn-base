    private void loadText(VertragObj vertr) {
        StringBuilder sb = new StringBuilder();
        sb.append("Versicherer:\t");
        sb.append(VersicherungsRegistry.getVersicher(vertr.getVersichererId()));
        sb.append("\n");
        sb.append("Produkt:\t");
        sb.append(VersicherungsRegistry.getProdukt(vertr.getProduktId()));
        sb.append("\n");
        sb.append("Policennummer:\t");
        sb.append(vertr.getPolicennr());
        sb.append("\n");
        sb.append("Status:\t");
        sb.append(Vertraege.getStatusName(vertr.getStatus()));
        sb.append("\n");
        sb.append("Beginn:\t");
        sb.append(df.format(vertr.getBeginn()));
        sb.append("\n");
    }

    private void doClose() {
        vtr = null;
        setVisible(false);
        dispose();
    }

    public VertragObj getReturn() {
        return vtr;
    }

