    private void combo_vertraegeActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_combo_vertraegeActionPerformed
        if (combo_vertraege.getSelectedIndex() == -1) {
            return;
        }
        try {
            vtr = (VertragObj) combo_vertraege.getSelectedItem();
            loadText(vtr);
        } catch (Exception e) {
        }
    }//GEN-LAST:event_combo_vertraegeActionPerformed

    private void cancelButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_cancelButtonActionPerformed
