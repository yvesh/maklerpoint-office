package de.acyrance.CRM.Stoerfalle.Tools;

import de.acyrance.CRM.Database.DatabaseConnection;
import de.acyrance.CRM.Logging.Log;
import de.acyrance.CRM.Stoerfalle.StoerfallObj;
import de.acyrance.CRM.System.Configuration.Config;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

/**
 *
 * @author Yves Hoppe <hoppe at maklerpoint.de>
 */
public class StoerfaelleHelper {
    
    public static int getNextStoerfallnummer(Connection con) throws SQLException{
        int next = -1;
        
        String sql = "SELECT MAX(stoerfallNr) FROM stoerfaelle";
        
        PreparedStatement statement = con.prepareStatement(sql,
                ResultSet.TYPE_SCROLL_SENSITIVE, ResultSet.CONCUR_UPDATABLE);
        ResultSet entry = statement.executeQuery();
        entry.next();
        int num = entry.getInt(1);
        
        if(num == 0) { // Startvalue
            next = Config.getConfigInt("initialStoerfaellenr", 60001);
        } else {        
            next = num + 1;
        }
        
        statement.close();
        con.close();
        
        if (Log.logger.isDebugEnabled()) {
            Log.logger.debug("Nächste freie interne Störfallnummer: " + next);
        }
        
        return next;
     }
    
    public static String verifyNochaktuell(String stoernr) throws SQLException {
        if (stoernr.equalsIgnoreCase("0")) {
            return String.valueOf(getNextStoerfallnummer(DatabaseConnection.open()));
        }
        
        StoerfallObj sch = StoerfaelleSQLMethods.getStoerfall(DatabaseConnection.open(), stoernr);
        if(sch == null) {
            return stoernr;
        } else {
            return String.valueOf(getNextStoerfallnummer(DatabaseConnection.open()));
        }        
    }
    
}
