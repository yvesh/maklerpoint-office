package de.acyrance.CRM.Dokumente.Trigger;

import de.acyrance.CRM.Dokumente.Tools.DokumentenTrigger;
import de.acyrance.CRM.Exception.ShowException;
import de.acyrance.CRM.Gui.Exception.ExceptionDialogGui;
import de.acyrance.CRM.Kunden.FirmenObj;
import de.acyrance.CRM.Kunden.KundenObj;
import de.acyrance.CRM.Logging.Log;
import de.acyrance.CRM.Registry.BasicRegistry;
import de.acyrance.CRM.Schnittstellen.Word.ExportMaklerEinzelAuftrag;

/**
 *
 * @author yves
 */
public class MaklerEinzelTrigger implements DokumentenTrigger {

    public void execute(String filename, KundenObj kunde) {
        ExportMaklerEinzelAuftrag em = new ExportMaklerEinzelAuftrag(filename, kunde,
                BasicRegistry.currentMandant, BasicRegistry.currentUser);
        try {
            em.write();
        } catch (Exception e) {
            Log.logger.fatal("Fehler: Konnte den Maklereinzelauftrag für \"" + kunde.getKundenNr() + "\" nicht erstellen.", e);
            ShowException.showException("Konnte den Maklerautrag nicht generieren.",
                    ExceptionDialogGui.LEVEL_WARNING, e,
                    "Schwerwiegend: Konnte Maklerauftrag nicht generieren");

        }
    }

    public void execute(String filename, FirmenObj firma) {
        ExportMaklerEinzelAuftrag em = new ExportMaklerEinzelAuftrag(filename, firma,
                BasicRegistry.currentMandant, BasicRegistry.currentUser);
        try {
            em.write();
        } catch (Exception e) {
            Log.logger.fatal("Fehler: Konnte den Maklereinzelauftrag für \"" + firma.getKundenNr() + "\" nicht erstellen.", e);
            ShowException.showException("Konnte den Maklereinzelauftrag nicht generieren.",
                    ExceptionDialogGui.LEVEL_WARNING, e,
                    "Schwerwiegend: Konnte Maklereinzelauftrag nicht generieren");

        }
    }

}
